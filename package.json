{
  "name": "react-cie-1931",
  "version": "0.2.2",
  "homepage": "https://derek-rein.github.io/react-cie-1931/",
  "description": "CIE 1931 color space component",
  "type": "module",
  "main": "./dist/viewer.umd.cjs",
  "module": "./dist/viewer.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/viewer.js",
      "require": "./dist/viewer.umd.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "pnpm run clean && tsc --noEmit && vite build",
    "storybook": "storybook dev -p 6006",
    "preview": "vite preview",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf ./storybook-static && rm -rf ./dist",
    "build:sb": "storybook build",
    "prepublishOnly": "pnpm run build",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "release:dry": "npm publish --dry-run"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-links": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@types/node": "^20.14.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.12",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "keywords": [
    "react",
    "component",
    "ocio",
    "viewer",
    "cie-1931",
    "chromaticity-diagram",
    "color-science",
    "color-space",
    "color-gamut",
    "typescript",
    "visualization",
    "interactive"
  ],
  "author": "Derek Rein",
  "license": "MIT",
  "packageManager": "pnpm@10.7.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/derekrein/react-cie-1931.git"
  }
}
